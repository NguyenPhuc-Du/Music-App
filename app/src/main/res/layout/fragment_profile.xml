<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedProfileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#141414"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/profileContainerRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/profileContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profilePicture"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/avatarUser"
                android:padding="5dp" />

            <!-- Name and edit button -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nameUserContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Phuc"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_edit"
                    android:background="@android:color/transparent"
                    app:tint="@color/white"
                    app:layout_constraintStart_toEndOf="@id/tvNameUser"
                    app:layout_constraintTop_toTopOf="@id/tvNameUser"
                    app:layout_constraintBottom_toBottomOf="@id/tvNameUser"
                    android:layout_marginStart="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Follower / Following -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/followContainer"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <!-- Followers -->
                <LinearLayout
                    android:id="@+id/followerContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="80dp">

                    <TextView
                        android:id="@+id/tvNumberFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="30"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvFollowersTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Followers"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Following -->
                <LinearLayout
                    android:id="@+id/followingContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@id/followerContainer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="50dp">

                    <TextView
                        android:id="@+id/tvNumberFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="42"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvFollowingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Following"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Bio -->
            <TextView
                android:id="@+id/tvBioUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Em đẹp lắm!"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trackUserContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!-- Upload -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadTrackUserContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvUploadTrackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploads"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tvUploadTrackExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>>"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUploadTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:clipToPadding="false"
                android:visibility="visible"
                tools:listitem="@layout/item_card_love" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trackListUserContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/tvTrackListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track List"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView android:id="@+id/tvTrackListExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>>"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loveTrackUserContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/tvLoveTrackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView android:id="@+id/tvLoveTrackExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">>>"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
